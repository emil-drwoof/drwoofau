<div class="outer-menu">
   <button type="button" class="close-x">
      <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" viewBox="0 0 64 64">
         <path d="M19 17.61l27.12 27.13m0-27.12L19 44.74"></path>
      </svg>
      <span class="icon__fallback-text">Close (esc)</span>
   </button>
   <div class="newmenu">

      <div class="newmenu-inner">
         {% if localization.country.currency.iso_code == 'USD' %}
            {% for link in linklists[section.settings.us_menu_link_list].links %}
            <div class="slink-entry dropdower">
               {% if link.links.size > 0 %}
               <div class="link-entry">
                  <div class="link-info">
                     <span>{{ link.title }}</span>
                  </div>
                  <i class="fa fa-angle-right righter" aria-hidden="true"></i>
                  <i class="fa fa-angle-down righter" aria-hidden="true"></i>
               </div>
               {% else %}
               <a href="{{ link.url }}" class="link-entry">
                  <div class="link-info">
                     <span>{{ link.title }}</span>
                  </div>
               </a>
               {% endif %}
               {% if link.links.size > 0 %}
               <ul class="linker dropdown-child">
                  {% for childlink in link.links %}
                  <li class="menu-link">
                     <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                  </li>
                  {% endfor %}
               </ul>
               {% endif %}
            </div>
            {% endfor %}
         {% else %}
            {% for link in linklists[section.settings.int_menu_link_list].links %}
               <div class="slink-entry dropdower">
                  {% if link.links.size > 0 %}
                  <div class="link-entry">
                     <div class="link-info">
                        <span>{{ link.title }}</span>
                     </div>
                     <i class="fa fa-angle-right righter" aria-hidden="true"></i>
                     <i class="fa fa-angle-down righter" aria-hidden="true"></i>
                  </div>
                  {% else %}
                  <a href="{{ link.url }}" class="link-entry">
                     <div class="link-info">
                        <span>{{ link.title }}</span>
                     </div>
                  </a>
                  {% endif %}
                  {% if link.links.size > 0 %}
                  <ul class="linker dropdown-child">
                     {% for childlink in link.links %}
                     <li class="menu-link">
                        <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                     </li>
                     {% endfor %}
                  </ul>
                  {% endif %}
               </div>
            {% endfor %}
         {% endif %}
         <hr>
         {% for link in linklists.slider-simple-3.links %}
         <a href="{{ link.url }}" class="newmenulink">{{ link.title }}</a>
         {% endfor %}
      </div>
   </div>
</div>
