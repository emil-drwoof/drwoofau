                        8.85533 10.9912C8.69677 10.9643 8.52809 10.885 8.34929
                        10.7534L5.74823 8.84563L3.15223 10.7534C2.97343 10.885
                        2.80306 10.9643 2.64113 10.9912C2.48257 11.0182 2.3375
                        10.9828 2.20593 10.885Z" fill="#F9D848"/>
                    </svg>
                    {%- endif -%}
                </span>
                {% endfor %}
            </div>
        {% endif %}
      {% if section.settings.desc_text != blank %}
        <p
            class="review-description"
            style="
            color: {{ section.settings.desc_color }};
            font-size: {{ section.settings.desc_font_size }}px;
            "
        >
            {{ section.settings.desc_text }}
        </p>
    {% endif %}

    {% if section.settings.author_text != blank %}
      <h6
        class="review-author-name"
        style="
          color: {{ section.settings.author_color }};
          font-size: {{ section.settings.author_font_size }}px;
        "
      >
        {{ section.settings.author_text }}
      </h6>
    {% endif %}
    </div>
  </div>
</div>

