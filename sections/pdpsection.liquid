          <span class="badge-text">{{ section.settings.badge_text }}</span>
        </div>
      {% endif %}
      
      {% if section.settings.main_title != blank %}
        <h2 class="main-title">{{ section.settings.main_title }}</h2>
      {% endif %}
    </div>

    <!-- Features Grid -->
    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-item" {{ block.shopify_attributes }}>
          <div class="feature-header">
            {% if block.settings.icon != blank %}
              <div class="feature-icon">
                <img src="{{ block.settings.icon | image_url: width: 64 }}" alt="Feature Icon" width="32" height="32" loading="lazy">
              </div>
            {% endif %}
            
            {% if block.settings.title != blank %}
              <h3 class="feature-title">{{ block.settings.title }}</h3>
            {% endif %}
          </div>
          
          {% if block.settings.description != blank %}
            <p class="feature-description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .dr-woof-features {
    
    padding: 60px 20px;    
      background:#FDF5EF;      
      background-image: url('https://cdn.shopify.com/s/files/1/0573/7250/8344/files/dbf6c89f-5548-4fad-9e11-9fa61dc0875d.png?v=1753115020'); /* Path to your PNG */
      background-repeat: no-repeat;
      background-position: center 40px;
      background-size: 100% auto; /* Full width, auto height */
      width: 100%;
  }
  @media only screen and (max-width:480px){
      .dr-woof-features{
        display:none !important;
      }
  }
  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .header-section {
    text-align: center;
    margin-bottom: 0px;
  }

  .badge {
    font-family: 'Outfit', sans-serif;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 500;
    color: #333;
    margin-bottom: 11px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .badge-icon {
    font-size: 12px;
    font-weight: bold;
  }

  .main-title {
     font-family: 'Outfit', sans-serif;
    font-size: 32px;
    font-weight: 600;
    color: #000;
    margin: 0 0 20px 0;    
  }

  .features-grid {
    display: flex;
    flex-wrap:wrap;
    justify-content: space-between;
    gap: 14px;    
    margin: 0 auto;    
  }

  .feature-item {
    text-align: left;
    background: white;
    padding: 24px 30px;
    border-radius: 6px;
    flex:0 0 390px;
    // box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .feature-header {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    margin-bottom: 0px;
    justify-content: flex-start;
    text-align: left;
    padding-left:6px;
  }

  .feature-icon {
    width: 32px;
    height: 32px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .feature-title {
    font-family: 'Poppins', sans-serif;
    font-size: 24px;
    font-weight: 500;
    color: #000;
    margin-bottom: 23px;
    line-height: 1.3;
    text-align: left;
  }

  .feature-description {
    font-family: 'Poppins', sans-serif;
    font-size: 14px;    
    color: rgba(0, 0, 0, 0.6);
    letter-spacing: -0.1px;
    margin: 0;
    text-align: left;
  }

  @media (max-width: 768px) {
    .dr-woof-features {
      padding: 40px 20px;
    }

    .main-title {
      font-size: 32px;
    }

    .feature-title {
      font-size: 24px;
    }

    .features-grid {
      gap: 40px;
    }
  }
</style>

{% schema %}
{
  "name": "Dr. Woof Features",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Designed by a family of Doctors"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main title",
      "default": "Why nurses love Dr. Woof"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dr. Woof Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "",
            "title": "Soft Like a Cloud",
            "description": "Gentle on the skin with no tight marks—just cloud-level softness that lasts all shift long. Worn by nurses, vets, and anyone on their feet all day."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "",
            "title": "Support That Works",
            "description": "Reduces swelling, boosts circulation, and relieves pain—clinically inspired and loved by 150,000+ healthcare workers."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "",
            "title": "Fun Meets Function",
            "description": "From cute animals to bold prints, our socks turn long shifts into something brighter—without compromising on medical-grade performance."
          }
        }
      ]
    }
  ]
}
{% endschema %}
