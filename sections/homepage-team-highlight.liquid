{% schema %}
{
  "name": "Homepage Team Highlight",
  "tag": "section",
  "class": "homepage-team-highlight-section",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Homepage Team Highlight",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
.homepage-team-highlight{
    width:100%;
      background:#FDF5EF;      
      background-image: url('https://cdn.shopify.com/s/files/1/0573/7250/8344/files/16ad526232642e1bee8214159f3fbf7b57433e8d_b05f3ccc-1301-41dc-abbe-e5d9c7b5b9db.png?v=1753117716');
      background-repeat: no-repeat;
      background-position: center bottom;
      background-size: 100% auto;
 }
  .homepage-team-highlight-wrapper {
    width: 1040px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    gap: 58px;
    align-items: center;    
    padding-top:17px;
    padding-bottom:17px;

  }

  .homepage-team-highlight-image-col {
    flex: 0 0 372px;
  }

  .homepage-team-highlight-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .homepage-team-highlight-text-col {
    flex: 1;
  }

  .homepage-team-highlight-title {
    font-family: 'Outfit', sans-serif;
    font-size: 32px;    
    margin-bottom: 8px;
    font-weight: semi-bold;
    color: #000;
  }

  .homepage-team-highlight-description {
    font-family: 'Outfit', sans-serif;
    font-size: 14px;    
    color: #000;
    letter-spacing: -0.05px;
    margin-bottom: 16px;
  }

  .homepage-team-highlight-button {
    display: inline-block;
    font-family: 'Outfit', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #fff;
    background: #000;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 4px;
    transition: background 0.3s ease;
  }

  .homepage-team-highlight-button:hover {
    background: #333;
  }
</style>
<div class="homepage-team-highlight">
    <div class="homepage-team-highlight-wrapper">
    <div class="homepage-team-highlight-image-col">
        <img 
        src="https://cdn.shopify.com/s/files/1/0573/7250/8344/files/dr_team_transparent.png?v=1753116639" 
        alt="Dr. Team" 
        class="homepage-team-highlight-image"
        >
    </div>
    <div class="homepage-team-highlight-text-col">
        <h2 class="homepage-team-highlight-title">Designed by clinicians, for clinicians.</h2>
        <p class="homepage-team-highlight-description">
        At Dr. Woof, we're not just another uniform brand, we're vets who still work full-time. That means we know exactly what you face on the floor. Every detail in our medical apparel is tested, refined, and built to handle your longest shifts, because we wear them too.
        </p>
        {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <a href="{{ section.settings.button_url }}" class="homepage-team-highlight-button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
    </div>
    </div>
</div>