    </div>

    {% if section.settings.title != blank %}
        <h2 class="scrub-title">{{ section.settings.title }}</h2>
    {%endif %}

    {% if section.settings.subtitle != blank %}
        <div class="scrub-subtitle">{{ section.settings.subtitle }}</div>
    {% endif %}

    {% if section.settings.main_image != blank %}
      <div class="scrub-image">
        <img src="{{ section.settings.main_image | img_url: '800x' }}" alt="Scrub Pants Collection">
      </div>
    {% endif %}
  </div>
</section>

<style>
.scrub-collection {
  text-align: center;
  padding: 40px 20px 0;
  background-color: {{ section.settings.bg_clr }};
  margin-top: {{ section.settings.space_top }};
  margin-bottom: {{ section.settings.space_bottom }};
}

.reviews-summary .stars_part,
.reviews-summary .text_part{
    background-color: #fff;
    padding: 6px 8px;
    border-radius: 99px;
    display: flex;
    gap: 5px;
    align-items: center;
    font-weight: 400;
    font-size: 12px;
    line-height: 100%;
    letter-spacing: 0px;
}
.reviews-summary {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin-bottom: 15px;
}

.stars {
    background: linear-gradient(90deg, #000 calc(var(--rating) / 5 * 100%), #ccc calc(var(--rating) / 5 * 100%));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: -2px;
}

.scrub-title {
  font-size: 24px;
  font-weight: 700;
  margin: 10px 0;
  font-family: Outfit, sans-serif;
  color: #000;
}

.scrub-subtitle {
  background: #000;
  color: #fff;
  display: inline-block;
  padding: 10px 18px;
  border-radius: 6px;
  font-size: 14px;
  font-family: Outfit, sans-serif;
}

.scrub-image img {
  max-width: 100%;
  border-radius: 0;
}

@media screen and (max-width: 377px){
.scrub-subtitle {
    padding: 10px;
    border-radius: 4px;
    font-size: 13px;
}
}
</style>

{% schema %}
{
  "name": "Collection Hero A",
  "settings": [
    {
      "type": "range",
      "id": "space_top",
      "label": "Space Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "space_bottom",
      "label": "Space Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },
    {
        "type": "color",
        "id": "bg_clr",
        "label": "Section BG Color",
        "default": "#F7F7F7"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Collection Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Scrub Pants Collection"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Built for Performance. Designed for Comfort."
    },
    {
      "type": "range",
      "id": "rating",
      "label": "Rating",
      "min": 0,
      "max": 5,
      "step": 0.1,
      "default": 4.8
    },
    {
      "type": "text",
      "id": "rating_text",
      "label": "Rating Text",
      "default": "Trusted by nurses"
    }
  ],
  "presets": [
    {
      "name": "Collection Hero A"
    }
  ]
}
{% endschema %}
