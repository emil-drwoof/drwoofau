{% schema %}
{
  "name": "Logos Marquee",
  "settings": [
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Padding top (desktop)",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Padding bottom (desktop)",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding top (mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding bottom (mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 30
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "PROUDLY SERVING"
    },
    {
      "type": "text",
      "id": "font_family",
      "label": "Font family",
      "default": "inherit"
    },
    {
      "type": "range",
      "id": "font_size_desktop",
      "label": "Font size (desktop)",
      "min": 10,
      "max": 80,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "font_size_mobile",
      "label": "Font size (mobile)",
      "min": 10,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 18
    },
    {
      "type": "range",
      "id": "title_padding_bottom_desktop",
      "label": "Title bottom padding (desktop)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "title_padding_bottom_mobile",
      "label": "Title bottom padding (mobile)",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "px",
      "default": 15
    },
    {
      "type": "range",
      "id": "items_desktop",
      "label": "Items to display (desktop)",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "items_mobile",
      "label": "Items to display (mobile)",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Logo link"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Logos Marquee",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="logos-marquee-section-{{ section.id }} page-width"
     style="padding-top: {{ section.settings.padding_top_desktop }}px; 
            padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
            --items-desktop: {{ section.settings.items_desktop }};
            --items-mobile: {{ section.settings.items_mobile }};">

  {% if section.settings.title != blank %}
    <div class="logos-title-container-{{ section.id }}"
         style="padding-bottom: {{ section.settings.title_padding_bottom_desktop }}px;">
      <h2 class="logos-title-{{ section.id }}"
          style="font-family: {{ section.settings.font_family }};
                 font-size: {{ section.settings.font_size_desktop }}px;">
        {{ section.settings.title }}
      </h2>
    </div>
  {% endif %}

  <div class="logos-marquee-{{ section.id }}">
    <div class="logos-track-{{ section.id }}">
      {% for block in section.blocks %}
        {% if block.settings.logo != blank %}
          <div class="logo-item-{{ section.id }}">
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">
                <img src="{{ block.settings.logo | img_url: 'master' }}" alt="logo" />
              </a>
            {% else %}
              <img src="{{ block.settings.logo | img_url: 'master' }}" alt="logo" />
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
      
      <!-- Duplicate for seamless loop -->
      {% for block in section.blocks %}
        {% if block.settings.logo != blank %}
          <div class="logo-item-{{ section.id }}">
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">
                <img src="{{ block.settings.logo | img_url: '200x' }}" alt="logo" />
              </a>
            {% else %}
              <img src="{{ block.settings.logo | img_url: '200x' }}" alt="logo" />
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('.logos-marquee-section-{{ section.id }}');
  if (section) {
    const desktopItems = {{ section.settings.items_desktop }};
    const mobileItems = {{ section.settings.items_mobile }};
    
    function updateItemSizes() {
      const logoItems = section.querySelectorAll('.logo-item-{{ section.id }}');
      const isMobile = window.innerWidth <= 767;
      const itemsToShow = isMobile ? mobileItems : desktopItems;
      const gap = isMobile ? 8 :  40;      
      const containerWidth = section.offsetWidth;
      const itemWidth = (containerWidth - (itemsToShow) * gap) / itemsToShow;
      
      logoItems.forEach(item => {
        item.style.width = itemWidth + 'px';
        item.style.flexShrink = '0';
      });
    }
    
    updateItemSizes();
    window.addEventListener('resize', updateItemSizes);
  }
});
</script>

<style>
.logos-marquee-section-{{ section.id }} {
  text-align: center;
}

.logos-title-container-{{ section.id }} {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  max-width: 1200px;
}

.logos-title-container-{{ section.id }}::before,
.logos-title-container-{{ section.id }}::after {
  content: '';
  flex: 1;
  height: 1px;
  background-color: #000;
  margin: 0 20px;
}

.logos-title-{{ section.id }} {
  font-weight: 700;
  margin: 0;
  white-space: nowrap;
  padding: 0 10px;
}

.logos-marquee-{{ section.id }} {
  overflow: hidden;
  position: relative;
  width: 100%;
}

.logos-track-{{ section.id }} {
  display: flex;
  gap: 40px;
  animation: scroll-marquee-{{ section.id }} 30s linear infinite;
  width: fit-content;
}

.logo-item-{{ section.id }} {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.logo-item-{{ section.id }} img {
  width: 100%;
  height: auto;
  object-fit: contain;
  display: block;
}

@keyframes scroll-marquee-{{ section.id }} {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

/* Mobile adjustments */
@media (max-width: 767px) {
  .logos-marquee-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px !important;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
  }
  
  .logos-title-{{ section.id }} {
    font-size: {{ section.settings.font_size_mobile }}px !important;
  }
  
  .logos-title-container-{{ section.id }} {
    padding-bottom: {{ section.settings.title_padding_bottom_mobile }}px !important;
  }
  
  .logos-title-container-{{ section.id }}::before,
  .logos-title-container-{{ section.id }}::after {
    margin: 0 15px;
  }
}
</style>