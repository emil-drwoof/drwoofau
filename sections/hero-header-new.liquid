{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero-section" data-section-id="{{ section.id }}">
  <div class="hero-container">
    <div class="hero-content">
      {%- if section.settings.show_rating -%}
        <div class="hero-rating">
          <div class="stars">
            {%- for i in (1..5) -%}
              <svg class="star-icon" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
              </svg>
            {%- endfor -%}
          </div>
          {%- if section.settings.rating_text != blank -%}
            <span class="rating-text">{{ section.settings.rating_text }}</span>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- if section.settings.headline != blank -%}
        <h1 class="hero-headline">{{ section.settings.headline }}</h1>
      {%- endif -%}

      {%- if section.settings.subheadline != blank -%}
        <div class="hero-subheadline">{{ section.settings.subheadline }}</div>
      {%- endif -%}

      <div class="hero-buttons">
        {%- if section.settings.button_1_text != blank -%}
          <a href="{{ section.settings.button_1_link }}" class="hero-button button-primary">
            {{ section.settings.button_1_text }}
          </a>
        {%- endif -%}
        
        {%- if section.settings.button_2_text != blank -%}
          <a href="{{ section.settings.button_2_link }}" class="hero-button button-secondary">
            {{ section.settings.button_2_text }}
          </a>
        {%- endif -%}
      </div>

      {%- if section.settings.guarantee_text != blank -%}
        <p class="hero-guarantee">{{ section.settings.guarantee_text }}</p>
      {%- endif -%}
    </div>
  </div>
</div>

