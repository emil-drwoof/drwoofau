<style>
  .hero-section {
    position: relative;
    min-height: {{ section.settings.section_height }}px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    {% comment %} display: flex; {% endcomment %}
    display: none;
    align-items: center;
    overflow: hidden;
  }

  {%- if section.settings.background_image -%}
    [data-section-id="{{ section.id }}"].hero-section {
      background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
    }
  {%- endif -%}

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  .hero-container {
    position: relative;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 20px;
    z-index: 1;
  }

  .hero-content {
    max-width: 650px;
    text-align: {{ section.settings.text_alignment }};
    color: {{ section.settings.text_color }};
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .hero-rating {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
    {%- if section.settings.text_alignment == 'center' -%}
      justify-content: center;
    {%- elsif section.settings.text_alignment == 'right' -%}
      justify-content: flex-end;
    {%- else -%}
      justify-content: flex-start;
    {%- endif -%}
  }

  .stars {
    display: flex;
    gap: 4px;
  }

  .star-icon {
    width: 20px;
    height: 20px;
    color: {{ section.settings.star_color }};
  }

  .rating-text {
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    opacity: 0.95;
  }

  .hero-headline {
    font-size: {{ section.settings.headline_font_size_desktop | default: 50 }}px;
    font-family: Futura, " sans-serif";
    font-weight: {{ section.settings.headline_font_weight | default: 600 }};
    line-height: 1.1;
    margin: 0;
    text-transform: capitalize;
    color: {{ section.settings.text_color }};
    text-align: {{ headline_align_desktop }};
  }

  .hero-subheadline {
    font-size: {{ section.settings.subheadline_font_size_desktop | default: 20 }}px;
    line-height: 1.6;
    margin: 1rem 0;
    opacity: 0.95;
    font-weight: {{ section.settings.subheadline_font_weight | default: 600 }};
    font-family: Futura, " sans-serif";
    text-align: {{ subheadline_align_desktop }};
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    margin-bottom: 0;
    flex-wrap: wrap;
    {%- if section.settings.text_alignment == 'center' -%}
      justify-content: center;
    {%- elsif section.settings.text_alignment == 'right' -%}
      justify-content: flex-end;
    {%- else -%}
      justify-content: flex-start;
    {%- endif -%}
  }

  .hero-button {
    display: inline-block;
    padding: 8px 36px;
    font-size: 25px;
    font-weight: 700;
    letter-spacing: 1.2px;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
    width: 80%;
    text-align: center;
  }

  .button-primary {
    background-color: {{ section.settings.button_1_bg }};
    color: {{ section.settings.button_1_text_color }};
  }

  .button-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    opacity: 0.9;
  }

  .button-secondary {
    background-color: {{ section.settings.button_2_bg }};
    color: {{ section.settings.button_2_text_color }};
  }

  .button-secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    opacity: 0.9;
  }

  .hero-guarantee {
    font-size: {{ section.settings.guarantee_font_size_desktop | default: 16 }}px;
    font-weight: {{ section.settings.guarantee_font_weight | default: 700 }};
    letter-spacing: 2px;
    text-transform: uppercase;
    margin: 0;
    opacity: 0.95;
    text-align: {{ guarantee_align_desktop }};
  }

  @media (max-width: 768px) {
    .hero-section {
      min-height: {{ section.settings.section_height_mobile }}px;
    }

    {%- if section.settings.background_image_mobile -%}
      [data-section-id="{{ section.id }}"].hero-section {
        background-image: url('{{ section.settings.background_image_mobile | image_url: width: 1200 }}');
      }
    {%- endif -%}

    .hero-container {
      padding: 600px 20px 40px 20px;
    }

    .hero-content {
      max-width: 100%;
      text-align: {{ section.settings.text_alignment_mobile | default: section.settings.text_alignment }};
    }

    .hero-rating {
      {%- assign mobile_align = section.settings.text_alignment_mobile | default: section.settings.text_alignment -%}
      {%- if mobile_align == 'center' -%}
        justify-content: center;
      {%- elsif mobile_align == 'right' -%}
        justify-content: flex-end;
      {%- else -%}
        justify-content: flex-start;
      {%- endif -%}
    }

    .hero-headline {
      font-size: {{ section.settings.headline_font_size_mobile | default: section.settings.headline_font_size_desktop | default: 30 }}px;
      margin-bottom: 20px;
      text-align: {{ headline_align_mobile }};
    }

    .hero-subheadline {
      font-size: {{ section.settings.subheadline_font_size_mobile | default: section.settings.subheadline_font_size_desktop | default: 18 }}px;
      text-align: {{ subheadline_align_mobile }};
    }

    .hero-buttons {
      flex-direction: column;
      gap: 12px;
      {%- if mobile_align == 'center' -%}
        justify-content: center;
      {%- elsif mobile_align == 'right' -%}
        justify-content: flex-end;
      {%- else -%}
        justify-content: flex-start;
      {%- endif -%}
    }

    .hero-button {
      width: 100%;
      text-align: center;
      padding: 16px 24px;
      font-size: 14px;
    }

    .rating-text {
      font-size: 12px;
    }

    .hero-guarantee {
      font-size: {{ section.settings.guarantee_font_size_mobile | default: section.settings.guarantee_font_size_desktop | default: 14 }}px;
      text-align: {{ guarantee_align_mobile }};
    }

    .star-icon {
      width: 16px;
      height: 16px;
    }
  }

  @media (max-width: 480px) {
    .hero-headline {
      font-size: {{ section.settings.headline_font_size_mobile | default: section.settings.headline_font_size_desktop | default: 30 }}px;
    }

    .hero-subheadline {
      font-size: {{ section.settings.subheadline_font_size_mobile | default: section.settings.subheadline_font_size_desktop | default: 18 }}px;
    }
  }
</style>
