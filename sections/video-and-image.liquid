{% schema %}
{
  "name": "Media with Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "video_url",
      "id": "video",
      "label": "Video (optional)",
      "accept": ["youtube", "vimeo"]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Patent-Pending Removable Knee Pads"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Removable knee pads when you need them, regular scrubs when you don't..."
    },
    {
      "type": "checkbox",
      "id": "media_left",
      "label": "Show media on left",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Media with Text"
    }
  ]
}
{% endschema %}

<section class="media-text-wrapper">
  <div class="media-text-container {% if section.settings.media_left %}media-left{% else %}media-right{% endif %}">
    <div class="media-text-media">
      {% if section.settings.video != blank %}
        <div class="video-wrapper">
          {% if section.settings.video contains 'youtube' %}
            <iframe src="{{ section.settings.video | replace: 'watch?v=', 'embed/' }}" frameborder="0" allowfullscreen></iframe>
          {% elsif section.settings.video contains 'vimeo' %}
            <iframe src="{{ section.settings.video | replace: 'vimeo.com', 'player.vimeo.com/video' }}" frameborder="0" allowfullscreen></iframe>
          {% endif %}
        </div>
      {% elsif section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="" loading="lazy">
      {% endif %}
    </div>
    <div class="media-text-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>
    </div>
  </div>
</section>

<style>
.media-text-wrapper {
  width: 100%;
  padding: 60px 0;
}

.media-text-container {
  display: flex;
  align-items: center;
  justify-content: center;
  max-width: 1200px;
  margin: 0 auto;
  gap: 40px;
}

.media-text-media, 
.media-text-content {
  flex: 1;
  width: 50%;
}

.media-text-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: left;
}

.media-text-content h2 {
  font-weight: 700;
  font-size: 1.8rem;
  margin-bottom: 10px;
}

.media-text-content p {
  font-size: 1rem;
  line-height: 1.5;
  color: #444;
}

.video-wrapper, .media-text-media img {
  width: 100%;
  height: auto;
}

.video-wrapper iframe {
  width: 100%;
  height: 100%;
  aspect-ratio: 16 / 9;
}

/* Layout direction */
.media-left .media-text-media { order: 1; }
.media-left .media-text-content { order: 2; }

.media-right .media-text-media { order: 2; }
.media-right .media-text-content { order: 1; }

/* Responsive */
@media (max-width: 768px) {
  .media-text-container {
    flex-direction: column;
  }
  .media-text-media, .media-text-content {
    width: 100%;
  }
  .media-text-media { order: 1 !important; }
  .media-text-content { order: 2 !important; text-align: center; }
}
</style>
