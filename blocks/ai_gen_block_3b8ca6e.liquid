{% doc %}
  @prompt
    Just a simple CTA button
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-cta-button-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.alignment }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-cta-button-link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: 2px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-decoration: none;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-transform: {% if block.settings.text_uppercase %}uppercase{% else %}none{% endif %};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    transition: all 0.3s ease;
    cursor: pointer;
    min-width: {{ block.settings.min_width }}px;
    text-align: center;
  }

  .ai-cta-button-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-cta-button-link-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_color }};
    outline-offset: 2px;
  }

  @media screen and (max-width: 749px) {
    .ai-cta-button-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px 0;
    }
    
    .ai-cta-button-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
      min-width: {{ block.settings.min_width | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-cta-button-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.button_link != blank %}
    <a href="{{ block.settings.button_link }}" class="ai-cta-button-link-{{ ai_gen_id }}">
      {{ block.settings.button_text }}
    </a>
  {% else %}
    <span class="ai-cta-button-link-{{ ai_gen_id }}" style="cursor: default;">
      {{ block.settings.button_text }}
    </span>
  {% endif %}
</div>

{% schema %}
{
  "name": "CTA button",
  "settings": [
    {
      "type": "header",
      "content": "Button content"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Button style"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Background color",
      "default": "#0b0d32"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "Border color",
      "default": "#b8d2bc"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Hover background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Hover text color",
      "default": "#0b0d32"
    },
    {
      "type": "color",
      "id": "button_hover_border_color",
      "label": "Hover border color",
      "default": "#0b0d32"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        { "value": "300", "label": "Light" },
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi-bold" },
        { "value": "700", "label": "Bold" }
      ],
      "default": "600"
    },
    {
      "type": "checkbox",
      "id": "text_uppercase",
      "label": "Uppercase text",
      "default": true
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "label": "Letter spacing",
      "min": 0,
      "max": 3,
      "step": 0.5,
      "unit": "px",
      "default": 1
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "default": 24
    },
    {
      "type": "header",
      "content": "Button sizing"
    },
    {
      "type": "range",
      "id": "button_padding_vertical",
      "label": "Vertical padding",
      "min": 8,
      "max": 24,
      "step": 2,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_padding_horizontal",
      "label": "Horizontal padding",
      "min": 16,
      "max": 48,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "min_width",
      "label": "Minimum width",
      "min": 100,
      "max": 300,
      "step": 10,
      "unit": "px",
      "default": 160
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Button alignment",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "CTA button"
    }
  ]
}
{% endschema %}